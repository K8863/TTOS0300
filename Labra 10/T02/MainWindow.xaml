<Window x:Class="T02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:T02"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="525">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFAED5E4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="txbLogin" Grid.Column="0" Text="Login:" Margin="5"/>
        <TextBlock x:Name="txbPsswd" Grid.Row="1" Grid.Column="0" Text="Password:" Margin="5"/>
        <TextBox x:Name="txtLogin" Grid.Row="0" Grid.Column="1" Margin="5" Width="100"/>
        <TextBox x:Name="txtPsswd" Grid.Row="1" Grid.Column="1" Margin="5" Width="100"/>
        <Button x:Name="btnLogin" Grid.Row="3" Grid.Column="1" Content="Login" Margin="5" Click="btnLogin_Click"/>
    </Grid>
</Window>
