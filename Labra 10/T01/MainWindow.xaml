<Window x:Class="T01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:T01"
        mc:Ignorable="d"
        Title="Shopping List" Height="350" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Left">
            <CheckBox x:Name="chbBeer" Content="Beer" Margin="10" />
            <CheckBox x:Name="chbCoke" Content="Coke" Margin="10" />
            <CheckBox x:Name="chbPizza" Content="Pizza" Margin="10" />
            <CheckBox x:Name="chbChocolate" Content="Chocolate" Margin="10" />
            <Button x:Name="btnBuy" Content="Buy" Margin="10" Click="btnBuy_Click"/>
            <TextBlock x:Name="txbList" TextWrapping="Wrap" Text="Shopping list:" Margin="10"/>
            <TextBox x:Name="txtList" Width="200" Height="50" TextWrapping="Wrap" Text="" Margin="10"/>

        </StackPanel>
    </Grid>
</Window>
